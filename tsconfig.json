{
  "compilerOptions": {
    "target": "es2015",
    "module": "esNext",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "noEmit": true,

    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,

    "baseUrl": ".",
    "paths": {
      "/*": ["*"]
    },
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["types/", "node_modules/@types"]
  }
}
